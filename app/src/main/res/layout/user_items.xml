<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/username_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/profile_image_user"
        android:layout_toRightOf="@+id/profile_image_user"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#05df29"
        android:id="@+id/img_on"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/username"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@+id/profile_image_user"
        android:layout_toEndOf="@+id/profile_image_user"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#D32F2F"
        android:id="@+id/img_off"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/username"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@+id/profile_image_user"
        android:layout_toEndOf="@+id/profile_image_user"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_user"
        android:layout_toRightOf="@id/profile_image_user"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:id="@+id/last_smg"
        android:layout_marginLeft="15dp"
        android:maxLines="1"/>


</RelativeLayout>